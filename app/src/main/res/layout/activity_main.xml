<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".MainActivity"    >


    <TextView
        android:id="@+id/tv_num2"
        android:layout_width="382dp"
        android:layout_height="62dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="#0587C1"
        android:textAlignment="textEnd"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_num1" />

    <TextView
        android:id="@+id/tv_num1"
        android:layout_width="381dp"
        android:layout_height="63dp"
        android:layout_marginTop="32dp"
        android:background="#0587C1"
        android:textAlignment="textEnd"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="371dp"
        android:layout_height="489dp"
        android:layout_marginTop="116dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_num2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="pressButtons"
                android:text="7"
                android:textSize="48sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="pressButtons"
                android:text="8"
                android:textSize="48sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="pressButtons"
                android:text="9"
                android:textSize="48sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/btnC"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C"
                android:textSize="48sp"
                android:backgroundTint="#3F51B5"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="pressButtons"
                android:text="4"
                android:textSize="48sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="pressButtons"
                android:text="5"
                android:textSize="48sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="pressButtons"
                android:text="6"
                android:textSize="48sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/Division"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clickOperation"
                android:text="/"
                android:textSize="48sp"
                android:backgroundTint="#FFC107"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="pressButtons"
                android:text="1"
                android:textSize="48sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="pressButtons"
                android:text="2"
                android:textSize="48sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="pressButtons"
                android:text="3"
                android:textSize="48sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/Mult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clickOperation"
                android:text="*"
                android:textSize="48sp"
                android:backgroundTint="#FFC107"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/Suma"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clickOperation"
                android:text="+"
                android:textColorHighlight="#000000"
                android:textSize="48sp"
                android:backgroundTint="#FFC107"/>

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="pressButtons"
                android:text="0"
                android:textSize="48sp"
                android:backgroundTint="#2196F3"
                />

            <Button
                android:id="@+id/Resta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="clickOperation"
                android:text="-"
                android:textSize="48sp"
                android:backgroundTint="#FFC107"/>

            <Button
                android:id="@+id/btnIgual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="calcularResultado"
                android:text="="
                android:textSize="48sp"
                android:backgroundTint="#8BC34A"/>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>